<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <p class="m-0 nav-link lead font-weight-bold text-white-50" id="nav-logo-text"><i class="fas fa-temperature-low mr-1 text-white-50" id="logo-icon"></i>Diagnode</p>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item dropdown">
          <%= link_to "/carts/#{current_user.id}" do %>
            <i class="fa fa-shopping-cart my-nav-cart nav-link dropdown-toggle text-white-50"></i>
          <% end %>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <% current_user.cart.cart_products.each do |product| %>
              <%= link_to product.product.name, 'carts/user_id', class: "dropdown-item" %>
            <% end %>
          </div>
        </li>
        <li class="nav-item">
          <%= link_to "Marketplace", "/products", class: "nav-link text-white" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://avatarfiles.alphacoders.com/192/thumb-192285.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "News", "#", class: "dropdown-item" %>
            <%= link_to "Diagnostics", diagnostics_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <%= link_to 'carts/user_id' do %>
            <i class="fa fa-shopping-cart my-nav-cart nav-link dropdown-toggle text-white-50"></i>
          <% end %>
        <li class="nav-item">
          <%= link_to "Marketplace", "/products", class: "nav-link text-white-50" %>
        </li>
        <li class="nav-item dropdown text-white">
          <div id="LoginDropdown" class="dropdown-toggle p-2 rounded mr-3", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false">Login</div>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="LoginDropdown">
            <%= link_to "Customer Login", new_user_session_path, class: "dropdown-item" %>
            <%= link_to "Client Login", new_user_session_path, class: "dropdown-item" %>
            <%= link_to "News", "#", class: "dropdown-item" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

