                    <div class="product-image-index-page">
                    <%= image_tag 'https://is4-ssl.mzstatic.com/image/thumb/Purple114/v4/06/2c/2a/062c2a8f-50d1-81b1-1cc3-fa6aa50bc9f3/source/256x256bb.jpg', alt: "alttext", crop: :fill %>
                    </div>
                <% end %>
                <div class="product-info-index-page">
                    <p><strong><%= product.name %></strong></p>
                    <p><%= product.description %></p> 
            
                </div>
                <div class="product-price-index-page">
