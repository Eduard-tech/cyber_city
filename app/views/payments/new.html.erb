<%= render 'shared/navbar' %>
<div id="payment-container">
  <div class="row">
    <%# <div class="col-md-3"><%= image_tag @order.teddy.photo_url, width: '100%' %></div>
    <div class="col">
      <h1 class="text-white light-border-bottom py-2 mb-5 w-50">Checkout summary</h1>
      <% @cart.products.each do |product| %>
        <div class="d-inline-flex my-1 w-100 align-items-center h-50 light-border p-4">
          <p class="text-white m-0 p-0">Purchase of <strong><%= product.name %></strong></p>
          <p class="m-0 p-0"><strong><%= humanized_money_with_symbol product.price %></strong></p>
          <% if product.photos.attached? %>
            <%= cl_image_tag product.photos[0].key, alt: "alttext", class: "m-0 p-0", style: "width: 300px;"%>
          <% else %>    
            <img src="https://www.ship-technology.com/wp-content/uploads/sites/16/2019/07/Cyber-credit-NSWC-Crane-Corporate-Communications.jpg" height="200px" width="150px" class="animated fadeInRight img-fluid">
          <% end %>
          <%# raise %>
        </div>

      <% end %>
      <div>
      <p><strong>Total:<%= humanized_money_with_symbol @total %></strong></p>
      <p class="text-white-50 font-weight-bold">Voucher codes will be emailed directly after checkout</p>
      <button id="pay" class="btn btn-warning">Pay</button>
      </div>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @cart.checkout_session_id %>'
          });
        });
      </script>
    </div>
  </div>
</div>